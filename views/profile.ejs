<%- include('./common/header.ejs') %>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form hidden id="uploadform" action="/upload" method="POST" enctype="multipart/form-data"> 
        <input type="file" name="image">
    </form>
    <div class="prof-details flex flex-col items-center mt-20">
        <div class="relative">
            <span id="uploadicon" class="absolute bottom-0 right-0 w-8 h-8 rounded-full bg-zinc-200 flex items-center justify-center">
                <i class="text-zinc-800 ri-pencil-line"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <img src="/images/uploads/<%= user.profileimage %>" class="w-full h-full object-cover" alt="">
            </div>
        </div>
        <h1 class="text-3xl font-semibold"><%= user.fullname %></h1>
        <h3 class="text-md">@<%= user.username %></h3>
        <a href="/edit" class="mt-5 px-7 py-2 bg-zinc-700 rounded-full text-xs font-semibold">Edit</a>
        <a href="/add" class="bg-red-600 rounded-lg px-7 py-2 text-xs font-semibold mt-5">Add New Post</a>
    </div>
    <div class="cards flex flex-wrap justify-center gap-10 px-10 mt-10">
        <div class="card">
            <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
                <img src="/images/uploads/<%= user?.posts[0]?.image %>" class="w-full h-full object-cover" alt="">
            </div>
            <a href="/show" class="inline-block text-xl font-medium mt-5">Your Posts</a>
            <h5 class="text-sm font-medium opacity-60"><%= user.posts.length  %> Pins</h5>
        </div>
        <div class="card">
            <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
                <img src="https://images.unsplash.com/photo-1615234328015-84c7c7e82770?w=1000&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTl8fGNvbWljJTIwY2hhcmFjdGVyfGVufDB8fDB8fHww" class="w-full h-full object-cover" alt="">
            </div>
            <h3 class="text-xl font-medium mt-5">All Pins</h3>
            <h5 class="text-sm font-medium opacity-60">28 Pins</h5>
        </div>
        <div class="card">
            <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
                <img src="https://images.unsplash.com/photo-1473830394358-91588751b241?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MjB8fHBlcnNvbnxlbnwwfHwwfHx8MA%3D%3D" class="w-full h-full object-cover" alt="">
            </div>
            <h3 class="text-xl font-medium mt-5">All Pins</h3>
            <h5 class="text-sm font-medium opacity-60">28 Pins</h5>
        </div>
    </div>
</div>

<script>
    document.querySelector('#uploadicon').addEventListener('click',()=>{
        document.querySelector('#uploadform input').click();
    })
    document.querySelector('#uploadform input').addEventListener('change',()=>{
        document.querySelector('#uploadform').submit();
    })
</script>
<%- include('./common/footer.ejs') %>