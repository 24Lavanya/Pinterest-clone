<%- include('./common/header.ejs') %>
<div>
    <div class="w-full h-screen bg-[url('https://images.unsplash.com/photo-1574169208507-84376144848b?w=1000&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8YWJzdHJhY3R8ZW58MHx8MHx8fDA%3D')] bg-center bg-cover flex items-center justify-center">
        <div class="w-[25em] bg-white px-20 py-10 rounded-[30px]">
          <h1 class="text-3xl capitalize leading-none text-center font-semibold text-zinc-700 mb-7 tracking-tight">Create new account.</h1>
          <form action="/register" method="post">
              <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
              <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="fullname">
              <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="email">
              <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
            <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
            <input class="border-2 rounded-full block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create new account">
            <p class="text-xs font-semibold text-zinc-500 mt-7 text-center w-3/4 mx-auto">By continuing, you agree to Pinterest's Terms of Service. Opens a new tab and acknowledge that you've read our Privacy Policy Notice at collection</p>
          </form>
          <a class="inline-block mt-7 text-sm font-semibold text-blue-500 w-full text-center" href="/">Have an account?</a>
        </div>
        </div>
</div>
<%- include('./common/footer.ejs') %>